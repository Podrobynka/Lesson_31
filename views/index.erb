<h2>Welcome to Pizza Shop!</h2>

<div class="row">

  <% @products. each do |product| %>

  <div class="col-md-4">
    <div>
      <h5><%= product.title %></h5>
    </div>

    <div>
      <img src="<%= product.path_to_image %>"/>
    </div>

    <div>
      <%= product.description %>
    </div>

    <div>
      Size: <%= product.size %> cm
    </div>

    <div>
      Price: <%= product.price %> UAH
    </div>

    <div id="in_cart_for_product_<%= product.id %>">
      In cart: 0
    </div>

    <div>
      <button type="button" class="btn btn-success btn-sm" onclick="add_to_cart(<%= product.id %>)">Add to cart</button>
    </div>
  </div>

  <% end %>
</div>
<br>
<button class="btn btn-primary" onclick="something()">Click me</button>
