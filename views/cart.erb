<h2>You cart</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">price</th>
      <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% total_price = 0 %>
    <% total_quantity = 0 %>

    <% @items.each do |item| %>
    <tr>
      <th scope="row"><%= item[0].id %></th>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %> UAH</td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price * item[1].to_i %>
    <% total_quantity += item[1].to_i %>
    <% end %>

    <tr>
      <td></td>
      <td></td>
      <td>Total: <%= total_price %> UAH</td>
      <td><%= total_quantity %></td>
    </tr>
  </tbody>
</table>