<h2>You cart</h2>

<table class="table table-striped" >
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% total_price = 0 %>
    <% total_quantity = 0 %>

    <% @items.each do |item| %>
    <tr id="cart_<%= item[0].id %>" style="display: none;">
      <td><%= item[0].id %></td>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %> UAH</td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price * item[1].to_i %>
    <% total_quantity += item[1].to_i %>
    <% end %>

    <tr>
      <td></td>
      <td></td>
      <td>Total: <%= total_price %> UAH</td>
      <td><%= total_quantity %></td>
    </tr>
  </tbody>
</table>

<form action="/visit" method="POST" role="form">
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="inputName">Name</label>
      <input type="email" class="form-control" id="inputName" placeholder="Name">
    </div>

    <div class="form-group col-md-4">
      <label for="inputPhone">Phone</label>
      <input type="password" class="form-control" id="inputPhone" placeholder="Phone">
    </div>

    <div class="form-group col-md-4">
      <label for="inputEmail">Email</label>
      <input type="email" class="form-control" id="inputEmail" placeholder="Email">
    </div>

    <div class="form-group col-md-9">
      <label for="inputAddress">Address</label>
      <input type="text" class="form-control" id="inputAddress" placeholder="Region, city, street, house number">
    </div>

    <div class="form-group col-md-3">
      <label for="inputZip">Zip</label>
      <input type="text" class="form-control" id="inputZip">
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Buy</button>
</form>